# 应用配置
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# 数据库配置（Windows 上建议使用 127.0.0.1 以避免 IPv6 解析为 ::1）
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=sms_verify
DB_USER=root
DB_PASSWORD=password
DB_DIALECT=mysql

# JWT 密钥配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=7d

# SMS-Activate API 配置
SMS_ACTIVATE_API_KEY=your-sms-activate-api-key
SMS_ACTIVATE_BASE_URL=https://api.sms-activate.ae/stubs/handler_api.php
SMS_ACTIVATE_USER_ID=your-user-id

# 邮件服务配置
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@smsyz.online
EMAIL_FROM_NAME=SMS验证平台

# SMTP 配置 (当 EMAIL_PROVIDER=smtp 时使用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Gmail 配置 (当 EMAIL_PROVIDER=gmail 时使用)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# SendGrid 配置 (当 EMAIL_PROVIDER=sendgrid 时使用)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun 配置 (当 EMAIL_PROVIDER=mailgun 时使用)
MAILGUN_USERNAME=your-mailgun-username
MAILGUN_PASSWORD=your-mailgun-password

# Ethereal 测试邮箱 (开发环境)
ETHEREAL_USER=test@ethereal.email
ETHEREAL_PASS=test123

# 支付配置
PAYMENT_SECRET=your-payment-webhook-secret

# 日志配置
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_DIR=./logs

# Redis 配置 (可选，用于缓存和会话)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# 监控配置
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
