# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=sms_verify
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# Email Configuration (for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com

# Safeping.xyz Configuration
SAFEPING_API_URL=https://safeping.xyz
SAFEPING_WEBHOOK_SECRET=your_webhook_secret_here
PAYMENT_EXPIRY_MINUTES=30

# SMS Configuration - SMS-Activate (for rental services)
SMS_ACTIVATE_API_KEY=your_sms_activate_api_key
SMS_ACTIVATE_BASE_URL=https://api.sms-activate.io/stubs/handler_api.php
SMS_ACTIVATE_USER_ID=your_user_id

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
