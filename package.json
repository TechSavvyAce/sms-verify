{
  "name": "sms-verify-cn",
  "version": "1.0.0",
  "description": "中国短信中间件平台 - Chinese SMS Middleware Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "quality": "npm run lint && npm run format:check && npm run test:ci",
    "pre-commit": "npm run lint:fix && npm run format && npm run test",
    "health-check": "node scripts/healthCheck.js",
    "db:sync": "node scripts/syncDatabase.js",
    "db:seed": "node scripts/seedData.js",
    "db:fix-keys": "node scripts/fixDatabaseKeys.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mysql2": "^3.6.5",
    "nodemailer": "^7.0.5",
    "redis": "^4.6.11",
    "sequelize": "^6.35.2",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "twilio": "^5.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "author": "SMS Middleware Team",
  "license": "MIT"
}
